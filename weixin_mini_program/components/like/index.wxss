.container {
  /* inline-flex 消除 flex container 的块状特性，宽度自适应 */
  display: inline-flex;
  flex-direction: row;
  padding: 10rpx;
}

.container image {
  width: 32rpx;
  height: 28rpx;
}

.container text {
  font-size: 24rpx;
  color: #bbbbbb;
  position: relative;
  bottom: 10rpx;
  left: 6rpx;
  line-height: 24rpx;
}